{% extends "layout.njk" %}

{% block content %}
{% for game in games %}
<div class="card-deck mb-4">
  <h3 class="card-header">{{ game.name }}</h3>
  <div class="card-body">
    <h5 class="card-title">{{ game.platforms.name }}</h5>
    <h6 class="card-subtitle text-muted">{{ game.genre }}</h6>
  </div>
  <svg xmlns=`{{ game.cover.url }}`class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
    <rect width="100%" height="100%" fill="#868e96"></rect>
  </svg>
  <div class="card-body">
    <a class="btn btn-primary" href=`/games/{{game.slug}}` role="button">{{ game.name }}</a>
  </div>
</div>
{% endfor %}

